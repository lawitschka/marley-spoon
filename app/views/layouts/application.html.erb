<!DOCTYPE html>
<html>
  <head>
    <title>MarleySpoon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="container">
        <div class="logo">
          <a class="" href="https://marleyspoon.com/" alt="Martha & Marley Spoon">Martha & Marley Spoon</a>
        </div>
        <div class="navigation">
          <div class="navigation-item">
            <%= link_to("View recipes", root_path, class: "#{current_page?(root_path) ? "active" : ""}") %>
          </div>
        </div>
      </div>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
